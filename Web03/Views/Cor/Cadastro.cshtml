
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
        <a class="navbar-brand h1" href="#">Infinito</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item @if (Request.Url.AbsolutePath.Contains("brinquedo")) { <text>active</text>} ">
                    <a class="nav-link" href="/brinquedo">Brinquedos</a>
                </li>
                <li class="nav-item @if (Request.Url.AbsolutePath.Contains("categoria")) { <text>active</text>} ">
                    <a class="nav-link" href="/categoria">Categorias</a>
                </li>
                <li class="nav-item @if (Request.Url.AbsolutePath.Contains("carro")) { <text>active</text>} ">
                    <a class="nav-link" href="/carro">Carros</a>
                </li>
                <li class="nav-item @if (Request.Url.AbsolutePath.Contains("cor")) { <text>active</text>} ">
                    <a class="nav-link" href="/cor">Cores</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        <form action="/cor/store" method="post">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input class="form-control" type="text" id="campo-nome" name="cor.Nome" required="required" />
            </div>
            <div class="float-right mb-4">
                <button class="btn btn-success" type="submit" value=""><i class="far fa-save"></i> Salvar</button>
            </div>
        </form>
    </div>
</body>
</html>
