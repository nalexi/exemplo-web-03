@section scripts{
    <script src="~/Scripts/Brinquedo/index-ajax.js"></script>
    }
    <div class="container-fluid">
        <div class="row mb-3 mt-3">
            <div class="col-12">
                <button type="button" class="float-right btn btn-primary" data-toggle="modal" data-target="#modal-cadastro-brinquedo">
                    Cadastro Brinquedo
                </button>
            </div>
        </div>
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th class="coluna-codigo">Codigo</th>
                    <th class="coluna-nome">Nome</th>
                    <th class="coluna-marca">Marca</th>
                    <th class="coluna-preco">Preco</th>
                    <th class="coluna-estoque">Estoque</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody id="tabela-brinquedo"></tbody>
            <tfoot>
                <tr>
                    <th class="coluna-codigo">Codigo</th>
                    <th class="coluna-nome">Nome</th>
                    <th class="coluna-marca">Marca</th>
                    <th class="coluna-preco">Preco</th>
                    <th class="coluna-estoque">Estoque</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
        <div class="modal fade " id="modal-cadastro-brinquedo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Cadastro Brinquedo</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="modal-cadastro-brinquedo-nome">Nome</label>
                            <input type="text" id="modal-cadastro-brinquedo-nome" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="modal-cadastro-brinquedo-marca">Marca</label>
                            <input type="text" id="modal-cadastro-brinquedo-marca" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="modal-cadastro-brinquedo-preco">Preço</label>
                            <input type="text" id="modal-cadastro-brinquedo-preco" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="modal-cadastro-brinquedo-estoque">Estoque</label>
                            <input type="text" id="modal-cadastro-brinquedo-estoque" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-success" id="modal-cadastro-brinquedo-salvar">Salvar</button>
                        <button type="button" class="btn btn-success" id="modal-cadastro-brinquedo-salvar-novo">Salvar Novo</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
